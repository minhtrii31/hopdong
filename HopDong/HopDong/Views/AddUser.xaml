<UserControl x:Class="HopDong.Views.AddUser"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:prism="http://prismlibrary.com/" xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             prism:ViewModelLocator.AutoWireViewModel="True">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Thêm Người Dùng Mới" FontWeight="Bold" FontSize="16" Margin="0 0 0 10"/>
            <ui:TextBox Text="{Binding FullName, Mode=TwoWay}" Margin="0 0 0 5" PlaceholderText="Tên người dùng"/>
            <ui:TextBox Text="{Binding Username, Mode=TwoWay}" Margin="0 0 0 5" PlaceholderText="Tên đăng nhập"/>
            <ui:TextBox Text="{Binding Password, Mode=TwoWay}" Margin="0 0 0 5" PlaceholderText="Mật khẩu"/>
            <ComboBox ItemsSource="{Binding UserRoles}" SelectedItem="{Binding SelectedUserRole}" Margin="0 0 0 5"/>
            <Button Content="Thêm" Command="{Binding AddUserCommand}" Margin="0 10 0 0"/>
            <Button Content="Hủy" Command="{Binding CancelCommand}"/>
        </StackPanel>

    </Grid>
</UserControl>
